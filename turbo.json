{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["apps/backend/dist/**", "apps/frontend/dist/**"]
    },
    "backend#build": {
      "dependsOn": ["^build"],
      "env": [
        "CORS_ORIGIN",
        "DATABASE_URL",
        "JWT_SECRET",
        "JWT_EXPIRES_IN_SECONDS",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_REGION",
        "AWS_S3_BUCKET",
        "CLOUDFRONT_DOMAIN",
        "CLOUDFRONT_KEYPAIR_ID",
        "CLOUDFRONT_PRIVATE_KEY"
      ],
      "outputs": ["apps/backend/dist/**"]
    },
    "frontend#build": {
      "dependsOn": ["^build"],
      "outputs": ["apps/frontend/dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    }
  },
  "globalDependencies": [
    "turbo.json",
    "tsconfig.json",
    "apps/backend/.env"
  ]
}
